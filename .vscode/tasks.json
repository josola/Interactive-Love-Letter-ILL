{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build",
            "command": "/usr/bin/g++-9",
            "args": [
                "-g",
                "${workspaceFolder}/src/**.cpp",
                "-o",
                "${workspaceFolder}/bin/love_letter"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}